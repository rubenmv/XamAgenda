<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="XamAgenda.Views.CreateContactPage">
    <ContentPage.ToolbarItems>
        <ToolbarItem Text="Crear contacto" />
    </ContentPage.ToolbarItems>
    <ContentPage.Content>
        <StackLayout>
            <ScrollView>
                <StackLayout VerticalOptions="StartAndExpand"  Padding="20, 20, 20, 20">
                    <Image Source="xamagenda_logo.png" VerticalOptions="Center" HeightRequest="64"/>
                    <Label Text="Nombre completo" />
                    <Entry x:Name="nameEntry" />
                    <Label Text="Email" />
                    <Entry x:Name="emailEntry" />
                    <Label Text="Dirección" />
                    <Entry x:Name="addressEntry" />
                    <Label Text="Telefono" />
                    <Entry x:Name="phoneEntry" />
                    <Label x:Name="messageLabel" />
                    <Button Text="Crear" x:Name="createButton" Clicked="createButton_Clicked" />
                </StackLayout>
            </ScrollView>
        </StackLayout>
    </ContentPage.Content>
</ContentPage>